<Window x:Class="Oz.Simulation.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Oz.Simulation.Client"
        xmlns:shapes="clr-namespace:Oz.Simulation.ClientLib.Objects;assembly=Oz.Simulation.ClientLib"
        xmlns:tools="clr-namespace:Oz.Simulation.ClientLib.Tools;assembly=Oz.Simulation.ClientLib"
        xmlns:views="clr-namespace:Oz.Simulation.Client.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        PreviewKeyDown="_mainViewport_OnPreviewKeyDown"
        PreviewMouseMove="_mainViewport_OnPreviewMouseMove">
    <Window.Resources>

    </Window.Resources>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding UnloadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Samples">
                <MenuItem Header="Restart Simulation" Command="{Binding RestartSimulationCommand}"></MenuItem>
                <MenuItem Header="Add Object" Command="{Binding AddObjectCommand}"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <views:AddObjectUserControl x:Name="AddObjectUserControl"
                                        Panel.ZIndex="10"
                                        DataContext="{Binding AddObjectViewModel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></views:AddObjectUserControl>
        </Grid>
        <Viewport3D Grid.Row="2" x:Name="_mainViewport" >
            <Viewport3D.Camera>
                <!-- <PerspectiveCamera Position="40,70,60" LookDirection="-40,-70,-60"></PerspectiveCamera> -->
                <!-- <OrthographicCamera x:Name="_mainCamera"  -->
                <!--                     Position="10,10,10"  -->
                <!--                     LookDirection="-10,-10,-10"  -->
                <!--                     Width="20"></OrthographicCamera> -->
                <PerspectiveCamera x:Name="_mainCamera"
                                   Position="10,10,10"
                                   LookDirection="-10,-10,-10"
                                   FieldOfView="60"></PerspectiveCamera>
            </Viewport3D.Camera>
            
            <tools:ScreenSpaceLines3D
                Points="0,0,0 5,0,0"
                Color="Red"></tools:ScreenSpaceLines3D>
            <tools:ScreenSpaceLines3D
                Points="0,0,0 0,5,0"
                Color="Green"></tools:ScreenSpaceLines3D>
            <tools:ScreenSpaceLines3D
                Points="0,0,0 0,0,5"
                Color="Blue"></tools:ScreenSpaceLines3D>
            
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <Model3DGroup.Children>
                            <DirectionalLight Color="White" Direction="-1,-2,-3"></DirectionalLight>
                        </Model3DGroup.Children>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
        <!-- <TextBlock Grid.Row="1" Foreground="Black" Text="" x:Name="_fpsText"></TextBlock> -->
    </Grid>
</Window>
